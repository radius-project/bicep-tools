{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "lib": ["es2017"],
    "module": "Node16",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "outDir": "dist",
    "paths": {
      "src/*": ["src/*"],
      "bicep-types": ["../../bicep-types/src/bicep-types"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
